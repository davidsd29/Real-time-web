<aside class="chat">
    <label for="chat_toggle">
        <input type="checkbox" name="chat_toggle" id="chat_toggle" data-chat-toggle> 
        <p class="text text__bold">Chat <span data-message-indicator class="hidden"></span></p>
    </label>

    <section class="chat_session">
        <p class="text text__title" data-participants>0 friends online</p>
        <ul></ul>
        <form id="chat">
            <input type="text" autocomplete="off">
            <button data-host="{{ user_name }}" data-room-number="{{room_number}}">Send</button>
        </form>
    </section>
</aside>